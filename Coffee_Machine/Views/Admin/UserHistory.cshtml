<!DOCTYPE html>
<html>
<head>
    <title>UserHistory</title>
</head>
<body>
    Name: @Model.UserAndPurchases.User.Login
    @using(Html.BeginForm("Index", "Admin")) {
        <input type="submit" value="back"/>
    }
    @if (@Model.UserAndPurchases.Purchases.Count != 0) {
    <table>
        @foreach (var i in @Model.UserAndPurchases.Purchases) {
        <tr>
                 <td><h2>
                 @if (@i.Enable) { <true>@i.Date</true> }
                 else { <false> @i.Date </false> }
                 </h2></td>
            <td>
                @{ 
                    var time = DateTime.Now.Subtract(i.Date);
                }

                @if ( (time.TotalMinutes < 5) && (i.Enable == true) ){
                using(Html.BeginForm("DeletePurchase", "User")) {
                    <input type="hidden" value="@i.Id" name="id"/>
                    <input type="submit" value="undo"/>
                }
                }
            </td>
        </tr>
        }
    </table>
    }
    @using(Html.BeginForm("Index", "Admin")) {
        <input type="submit" value="back"/>
    }

</body>
</html>

